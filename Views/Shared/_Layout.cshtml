<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="~/wwwroot/Css/style.css">
</head>
<body>
    
    <header>  
            <nav>
    <label class="logo">Logo</label>

    <ul>        
        <li id="color_picker">

              <select id="choose_color" name="color_pick">
                                <option value="">Select a color</option>
                                <option value="white">white</option>
                                <option value="black">black</option>
                                <option value="red">red</option>
                                <option value="gray">gray</option>
              </select>

        </li>
        <li id="start_price">Start price</li>
        <li id="end_price">End price</li>
        <li id="search_car" ><button type="button" class="btn">Search</button></li>
    </ul>

</nav>
    </header>

    <main>
        @RenderBody()

      <table>
        <tr>
            <th>Id</th>
            <th>Model</th>
            <th>Owner</th>
            <th>Color</th>
            <th>Price</th>
        </tr>
             @foreach(var item in Model)
            {
                <tr>                
                    <td>@item.Id</td>
                    <td>@item.Model</td>
                    <td>@item.Owner</td>
                    <td>@item.Color</td>
                    <td>@item.Price</td>
                </tr>
            }
     </table>
   </main>

    <footer> </footer>
</body>
</html>