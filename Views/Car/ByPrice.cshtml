@using MyTaskCars.Enums
@model MyTaskCars.ViewModels.PriceViewModel

<link rel="stylesheet" href="~/Css/style.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

@{
    ViewData["Title"] = "ByPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ByPrice</h1>


<div class="container container-fluid">
    <div class="row">
        <div class="col col-lg-4">
            <label for="Ch-color">Choose color</label>
            <form class="form" asp-controller="car" asp-action="filterbycolor" method="post">
                <select id="nimadir" asp-items="Html.GetEnumSelectList<Rang>()"
                    class="form-select">
                </select>
                <input type="submit" />
            </form>
        </div>

        <div class="col col-lg-4">
             
            <form class ="form" asp-controller="car" asp-action="filterbyprice" method="post">
                <label for="S-price">
                    @Html.DisplayNameFor(model => model.startPrice)
                </label>         
                <input asp-item="@Html.DisplayNameFor(model=>model.startPrice)" type="number" class="form-input form-control" id="S-price">
            </form>           
           
        </div>

        <div class="col col-lg-4">
             <form class ="form" asp-controller="car" asp-action="filterbyprice" method="post">
                <label for="E-price">
                    @Html.DisplayNameFor(model => model.endPrice)  
                </label>             
                <input asp-item="@Html.DisplayNameFor(model=> model.endPrice)" type="number" class="form-input form-control" id="E-price">
                
                <input type="submit" asp-controller="car" asp-action="filterbyprice" method="post" />
            </form>
           
        </div>

    </div>
</div>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Model</th>
        <th>Owner</th>
        <th>Color</th>
        <th>Price</th>
    </tr>
    @foreach (var item in @Model.list)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Model</td>
            <td>@item.Owner</td>
            <td>@item.Color</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
