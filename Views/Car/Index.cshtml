@using MyTaskCars.Enums
<link rel="stylesheet" href="~/Css/style.css">
@model CarsViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
@{
    Layout = "_Layout";
}

<div class="container container-fluid">
    <div class="row">
        <div class="col col-lg-4">
            <label for="Ch-color">Choose color</label>
            <form class="form" asp-controller="car" asp-action="filterbycolor" method="post">
                <select asp-for="@Model.rang" id="nimadir" asp-items="Html.GetEnumSelectList<Rang>()"
                    class="form-select">
                </select>
                <input type="submit" />
            </form>
        </div>

        <div class="col col-lg-4">
            <label for="S-price">Start price</label>
            <input type="number" class="form-input form-control" id="S-price">
        </div>

        <div class="col col-lg-4">
            <label for="E-price">End price</label>
            <input type="number" class="form-input form-control" id="E-price">
            <input type="submit" />
        </div>

    </div>
</div>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Model</th>
        <th>Owner</th>
        <th>Color</th>
        <th>Price</th>
    </tr>
    @foreach (var item in @Model.List)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Model</td>
            <td>@item.Owner</td>
            <td>@item.Color</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
