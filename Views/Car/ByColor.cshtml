@using MyTaskCars.Enums
<link rel="stylesheet" href="~/Css/style.css">
@model Enum
@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<div class="container container-fluid">
    <div class="row">

        <div class="col col-lg-4">
            <label for="Ch-color">Choose color</label>
            <form class="form">
                <select class="form-select" aria-label="Default select example">
                    <option value="@Rang.black">Black</option>
                    <option value="@Rang.white">White</option>
                    <option value="@Rang.blue">Blue</option>
                    <option value="@Rang.red">Red</option>
                    <option value="@Rang.purple">Purple</option>
                    <option value="@Rang.yellow">Yellow</option>
                    <option value="@Rang.grey">Gray</option>
                    <option value="@Rang.green">Green</option>
                </select>
                <a asp-controller="car" asp-action="filterbycolor" type="submit">Submit</a>
            </form>
        </div>

        <div class="col col-lg-4">
            <label for="S-price">Start price</label>
            <input type="number" class="form-input form-control" id="S-price">
        </div>

        <div class="col col-lg-4">
            <label for="E-price">End price</label>
            <input type="number" class="form-input form-control" id="E-price">
            <a asp-controller="car" asp-action="filterbycolor" type="submit">Submit</a>
        </div>

    </div>

</div>
